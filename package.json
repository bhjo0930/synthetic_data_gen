{
  "name": "neo-brutalism-design-system",
  "version": "1.0.0",
  "description": "Neo-Brutalism design system for web interfaces",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:buttons": "jest tests/button-component.test.js"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "playwright": "^1.54.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "static/css/**/*.css",
      "tests/**/*.js",
      "!tests/setup.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.(js|jsx|ts|tsx)",
      "**/*.(test|spec).(js|jsx|ts|tsx)"
    ]
  },
  "keywords": [
    "css",
    "design-system",
    "neo-brutalism",
    "web-design",
    "ui-components"
  ],
  "author": "Neo-Brutalism Design System",
  "license": "MIT"
}
